{procedure TUse_Ser.Change_Use_For;
resourcestring
  MsgText = '';
begin
  inherited;

  with FPost_Client.IdTCPClient do
  begin
    try
      Writeln('Change_Use_For');
      FUse := nil;
      FStateUse := suLock;
      Change_ImageIndex;
      ActionEnabledLock;

    except
      on E: Exception do
      begin
      MessageBox(Application.Handle, PChar(MsgText+ #13 +
          E.Message), PChar(MsgCaptionError), MB_OK+MsgType);
      end;
    end;

  end;
end;   }

